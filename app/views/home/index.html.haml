%h1.text-center.bg-primary
  %br
  System for solving mathematical equations
  %br
  %br
%br
.col-md-4.col-md-offset-4#inputform
  %h3 Select the type of equation
  #radio
    .form-group.radio
      .row
        .col-md-3.r
          = radio_button_tag :type, 'linear', true
          = label_tag :type_linear, 'linear'
        .col-md-4
          %span
            a *
            %strong x
            + b = 0
    .form-group.radio
      .row
        .col-md-3.r
          = radio_button_tag :type, 'quadratic'
          = label_tag :type_quadratic, 'quadratic'
        .col-md-4
          %span
            a *
            %strong
              x
              %sup 2
            + b *
            %strong x
            + c = 0
  %h3 Input the parameters of the solution
  #a-group.form-group.form-inline
    = label_tag :a, 'a'
    = number_field_tag :a, nil, class: 'input form-control', dataindex: '1'
    %span#a-alert.hidden
      = label_tag :a, '', class: 'control-label'
  #b-group.form-group.form-inline
    = label_tag :b, 'b'
    = number_field_tag :b, nil, class: 'input form-control', dataindex: '2'
    %span#b-alert.hidden
      = label_tag :a, '', class: 'control-label'
  #c-group.form-group.form-inline
    = label_tag :c, 'c'
    = number_field_tag :c, nil, class: 'input form-control', dataindex: '3'
    %span#c-alert.hidden
      = label_tag :a, '', class: 'control-label'
  %br
  %h3 Result
  %span#equation
  %span
    .progress
      .progress-bar.progress-bar-striped.active{ 'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '0', :role => 'progressbar', style: 'width: 0%' }
        -#%span.sr-only 45% Complete
  %span#result
